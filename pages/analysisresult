import React from "react";
import { base44 } from "@/api/base44Client";
import { useQuery } from "@tanstack/react-query";
import { useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { Button } from "@/components/ui/button";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { ArrowLeft, Download, MapPin, Calendar } from "lucide-react";
import { format } from "date-fns";
import MaterialCard from "../components/analysis/MaterialCard";
import StoneSizeChart from "../components/analysis/StoneSizeChart";
import CompositionChart from "../components/analysis/CompositionChart";
import AlertBanner from "../components/analysis/AlertBanner";

export default function AnalysisResult() {
  const navigate = useNavigate();
  const urlParams = new URLSearchParams(window.location.search);
  const analysisId = urlParams.get('id');

  const { data: analysis, isLoading } = useQuery({
    queryKey: ['analysis', analysisId],
    queryFn: async () => {
      const analyses = await base44.entities.Analysis.filter({ id: analysisId });
      return analyses[0];
    },
    enabled: !!analysisId,
  });

  const handleDownloadReport = () => {
    if (!analysis) return;

    // Create a simple text report
    const reportContent = `
RoadVision AI - Material Analysis Report
=========================================

Analysis Date: ${format(new Date(analysis.created_date), "MMMM d, yyyy 'at' h:mm a")}
Location: ${analysis.location}
Quality Status: ${analysis.quality_status.toUpperCase()}

MATERIAL CLASSIFICATION
-----------------------
Bitumen: ${analysis.materials_detected.bitumen}%
Sand: ${analysis.materials_detected.sand}%
Gravel: ${analysis.materials_detected.gravel}%
Stone Chips: ${analysis.materials_detected.stone_chips}%
Dust: ${analysis.materials_detected.dust}%

STONE SIZE ANALYSIS
-------------------
Average Size: ${analysis.stone_size_data.average_size_mm} mm

Size Distribution:
${analysis.stone_size_data.size_distribution.map(d => `${d.range}: ${d.count} stones`).join('\n')}

COMPOSITION SUMMARY
-------------------
Bitumen: ${analysis.composition_summary.bitumen_percent}%
Aggregate: ${analysis.composition_summary.aggregate_percent}%
Fines: ${analysis.composition_summary.fines_percent}%

${analysis.alerts && analysis.alerts.length > 0 ? `
QUALITY ALERTS
--------------
${analysis.alerts.map((alert, i) => `${i + 1}. ${alert}`).join('\n')}
` : 'No quality alerts. All parameters within acceptable range.'}

---
Generated by RoadVision AI
Smart Road Material Detection System
    `.trim();

    // Create and download file
    const blob = new Blob([reportContent], { type: 'text/plain' });
    const url = URL.createObjectURL(blob);
    const link = document.createElement('a');
    link.href = url;
    link.download = `analysis-report-${format(new Date(analysis.created_date), 'yyyy-MM-dd-HHmm')}.txt`;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
    URL.revokeObjectURL(url);
  };

  if (isLoading) {
    return (
      <div className="p-8 flex items-center justify-center min-h-screen">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4" />
          <p className="text-slate-600">Loading analysis results...</p>
        </div>
      </div>
    );
  }

  if (!analysis) {
    return (
      <div className="p-8 flex items-center justify-center min-h-screen">
        <div className="text-center">
          <p className="text-slate-600 mb-4">Analysis not found</p>
          <Button onClick={() => navigate(createPageUrl("Dashboard"))}>
            Return to Dashboard
          </Button>
        </div>
      </div>
    );
  }

  return (
    <div className="p-4 md:p-8 bg-gradient-to-br from-slate-50 to-blue-50 min-h-screen">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <div className="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
          <div className="flex items-center gap-4">
            <Button
              variant="outline"
              size="icon"
              onClick={() => navigate(createPageUrl("Dashboard"))}
            >
              <ArrowLeft className="w-4 h-4" />
            </Button>
            <div>
              <h1 className="text-3xl font-bold text-slate-800">Analysis Results</h1>
              <div className="flex items-center gap-4 mt-2 text-sm text-slate-600">
                <div className="flex items-center gap-1">
                  <Calendar className="w-4 h-4" />
                  {format(new Date(analysis.created_date), "MMM d, yyyy 'at' h:mm a")}
                </div>
                <div className="flex items-center gap-1">
                  <MapPin className="w-4 h-4" />
                  {analysis.location}
                </div>
              </div>
            </div>
          </div>
          <Button 
            onClick={handleDownloadReport}
            className="bg-green-600 hover:bg-green-700"
          >
            <Download className="w-4 h-4 mr-2" />
            Download Report
          </Button>
        </div>

        {/* Alert Banner */}
        <div className="mb-6">
          <AlertBanner status={analysis.quality_status} alerts={analysis.alerts} />
        </div>

        {/* Image Preview */}
        <Card className="mb-6 shadow-lg border-slate-200">
          <CardHeader className="bg-gradient-to-r from-slate-50 to-blue-50 border-b border-slate-200">
            <CardTitle className="text-slate-800">Captured Image</CardTitle>
          </CardHeader>
          <CardContent className="p-6">
            <img 
              src={analysis.image_url} 
              alt="Road material analysis" 
              className="w-full max-h-96 object-contain rounded-lg shadow-md"
            />
          </CardContent>
        </Card>

        {/* Analysis Results Grid */}
        <div className="grid lg:grid-cols-2 gap-6 mb-6">
          <MaterialCard materials={analysis.materials_detected} />
          <CompositionChart composition={analysis.composition_summary} />
        </div>

        <div className="mb-6">
          <StoneSizeChart sizeData={analysis.stone_size_data} />
        </div>
      </div>
    </div>
  );
}
